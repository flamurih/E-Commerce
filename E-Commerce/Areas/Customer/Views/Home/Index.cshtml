@model IEnumerable<E_Commerce.Models.Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="card p-3 m-3" style="width: 18rem;">
            <img class="card-img-top" height="320" src="@product.ImageUrl" alt="Card image cap">
            <div class="card-body px-2">
                <h5 class=" card-title">@product.Name</h5>
                <div class="p-lg-1"><strong>&euro; @product.Price</strong></div>
                <a class="btn btn-outline-info m-0" asp-action="Details" asp-route-productId="@product.Id">Product details</a>
                <button type="submit" value="Add to Cart" class="btn btn-primary m-0">Add to Cart</button>
            </div>
         </div>
    }
</div>
